<div class="navbar-wagon">
  <h1>Simple Airbnb</h1>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <a href="" class="navbar-wagon-item navbar-wagon-link">Add Flat</a>
  </div>
</div>

<div class="container">
  <h2>All our Flats (<%= @flats.count %>)</h2>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1533667586627-9f5ddbd42539?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80');">
          <div class="card-description">
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
            <i class="fas fa-users"></i> <%= flat.number_of_guests %> <i class="fas fa-euro-sign"></i> <%= flat.price_per_nights %> <%= link_to "More info", flat_path(flat) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


